								<button type="button" data-toggle="tooltip" class="btn button-compares col-sm-6 col-xs-6 col-xm-12" title="{{ button_compare }}" onclick="compare.add('{{ product_id }}');"><i class="icon-compare icon"></i>&nbsp;&nbsp;{{ button_compare }}</button>
							</div>
						  </div>
