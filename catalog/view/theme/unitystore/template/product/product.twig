										{% if showzoom=="0" %}
											<a class="thumbnail" href="{{ image.popup }}" title=""> <img src="{{ image.thumb }}" title="" alt="" /></a>
										{% endif %}
									</li>
								{% endfor %}
							</ul>
						</div>
					{% endif %}
				  </div>
				  {% endif %}
				  <div class="row send_mail_amigo">{{ controller_sendmail_amigo }}</div>
			</div>
			<div class="{{ class_2 }}">
				<ul class="nav nav-tabs btn-white">
					<li class="active"><a href="#tab-home" data-toggle="tab"><i class="fa fa-home"></i></a></li>
					<li><a href="#tab-description" data-toggle="tab">{{ tab_description }}</a></li>
					{% if attribute_groups %}
						<li><a href="#tab-specification" data-toggle="tab">{{ tab_attribute }}</a></li>
					{% endif %}
					{% if review_status %}
						<li><a href="#tab-reviews" data-toggle="tab">{{ tab_review }}</a></li>
					{% endif %}
				</ul>
					<div class="tab-content btn-border margin-bottom">
						<div class="tab-pane active" id="tab-home">
						  <div class="row">
							  <ul class="list-unstyled">
							    {% if manufacturer %}
								<li class="col-lg-6"><span class="listicon"></span>{{ text_manufacturer }} <a href="{{ manufacturers }}">{{ manufacturer }}</a></li>
								{% endif %}
								<li class="col-lg-6"><span class="listicon"></span>{{ text_model }} {{ model }}</li>
								{% if reward %}
								<li class="col-lg-6"><span class="listicon"></span>{{ text_reward }} {{ reward }}</li>
								{% endif %}
								<li class="col-lg-6"><span class="listicon"></span>{{ text_stock }} {{ stock }}</li>
							  </ul>
						  </div>
						  <div class="clearfix"></div>
						  <div class="row">
							<div class="col-sm-6 col-xs-6 col-xm-12">
