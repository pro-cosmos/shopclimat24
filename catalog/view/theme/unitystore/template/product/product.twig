							  {% endfor %}
							</tbody>
							{% endfor %}
						  </table>
						</div>
						{% endif %}
						{% if review_status %}
						<div class="tab-pane" id="tab-reviews">
						  <div class="row">
							<div class="col-sm-12 text-right">{% if add_reviews %}<a onClick="ajaxpopup('{{ add_reviews }}&limit=5&popup_all=1')" class="add_a"><i class="fa fa-newspaper-o"></i> {{ text_all_reviews }}</a>&nbsp;&nbsp;|&nbsp;&nbsp;{% endif %}<a onClick="show_reviews_add('300');" class="add_a2"><i class="fa fa-plus-square-o"></i> {{ text_add_reviews }}</a></div>
