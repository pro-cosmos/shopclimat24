							<!-- AddThis Button END -->
						</div>
					</div>
				</div><br /><br />
				{% if thumb or images %}
				  <div class="thumbnails">
				  {% if showzoom=="1" %}
						{% for image in images %}
							<div class="view-images">
								<a href="{{ image.popup }}" title="" class="colorbox"><img src="{{ image.thumb }}" title="" alt="" /></a>
							</div>
						{% endfor %}
						<div class="view-images"><a href="{{ popup }}" title="" class = "colorbox"><img src="{{ thumb }}" title="" alt="" /></a></div>
				   {% endif %}
				   {% if thumb %}
						<ul>
							<li>
								{% if showzoom=="1" %}
									<a href="{{ popup }}" title="" class = 'cloud-zoom' id='zoom1' data-rel="position: 'inside' ,showTitle: false, adjustX:0, adjustY:0"><img src="{{ thumb }}" title="" alt="" /></a>
									<div class="stiker-product">{% if display_special_stickers=="1" %}{{ sale }}{% endif %}{% if display_new_stickers=="1" %}{{ new }}{% endif %}{% if display_popular_stickers=="1" %}{{ popular }}{% endif %}</div>
								{% endif %}
								{% if showzoom=="0" %}
									<a class="thumbnail" href="{{ popup }}" title=""><img src="{{ thumb }}" title="" alt="" /></a>
								{% endif %}
							</li>
						</ul>
					{% endif %}
					{% if images %}
						<div class="clearboth"></div>
						<div class="image-additional">
							<ul>
								{% if showzoom=="1" %}
									<li>
										<a href="{{ popup }}" title="" class="cloud-zoom-gallery" data-rel="useZoom: 'zoom1', smallImage: '{{ thumb }}' "><img src="{{ thumb1 }}" title="" alt="" /></a>
									</li>
								{% endif %}
								{% for image in imags %}
									<li>
										{% if showzoom=="1" %}
											<a href="{{ image.popup }}" title="" class="cloud-zoom-gallery" data-rel="useZoom: 'zoom1', smallImage: '{{ image.thumb_zoom }}'"><img src="{{ image.thumb }}" title="" alt="" /></a>
