	setTimeout(function(){
		$('.product-thumb .image').viewportChecker({
			classToAdd: 'animated bounceIn'
		});
	}, 500);
	setTimeout(function(){
		$('.stiker-module-popular, .stiker-module-special, .stiker-module-new').viewportChecker({
			classToAdd: 'animated bounceIn'
		});
	}, 1000);
</script>
</body></html>