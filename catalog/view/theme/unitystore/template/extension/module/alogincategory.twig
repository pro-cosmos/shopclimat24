<h3>{{ heading_categ }}</h3>
<div class="list-group category column_position">
	<ul>
		{% for category_1 in categories_massiv1 %}
			{% if category_1.category_id == category1_id %}
			<li class="active{% if category_1.categories_2 %} childr{% endif %}"><a href="{{ category_1.href }}" class="active">{{ category_1.name }}{% if category_1.categories_2 %}<i class="fa fa-chevron-right"></i>{% endif %}</a>
			{% else %}
			<li{% if category_1.categories_2 %} class="childr"{% endif %}><a href="{{ category_1.href }}">{{ category_1.name }}{% if category_1.categories_2 %}<i class="fa fa-chevron-right"></i>{% endif %}</a>
			{% endif %}
			{% if category_1.categories_2 %}
			  <ul class="child_1">
			  {% if category_1.image %}
				<li><span class="image"><a href="{{ category_1.href }}"><img src="{{ category_1.image }}" alt="{{ category_1.name }}" /></a></span>{{ category_1.description }}</li>
			  {% endif %}
			  {% for category_2 in category_1.categories_2 %}
			  {% if category_2.category_id == category2_id %}
			  <li class="active{% if category_2.categories_3 %} child{% endif %}"><a href="{{ category_2.href }}" class="active">{{ category_2.name }}</a>
			  {% else %}
			  <li{% if category_2.categories_3 %} class="child"{% endif %}><a href="{{ category_2.href }}">{{ category_2.name }}{% if category_2.categories_3 %}<i class="fa fa-chevron-right"></i>{% endif %}</a>
			  {% endif %}
			  {% if category_2.categories_3 %}
				<ul class="child_2">
				{% for category_3 in category_2.categories_3 %}
				{% if category_3.category_id == category3_id %}
				<li class="active"><a href="{{ category_3.href }}" class="active">{{ category_3.name }}</a>
				{% else %}
				<li><a href="{{ category_3.href }}">{{ category_3.name }}</a>
				{% endif %}
				</li>
				{% endfor %}
				</ul>
			  {% endif %}
			  </li>
			  {% endfor %}
			  </ul>
			{% endif %}
			</li>
		{% endfor %}
	</ul>
</div>
<div class="module-category content_position">
  <div class="head_carousel">{{ heading_categ }}</div>
  <div class="box-category-top">
  {% for category in categories_massiv1 %}
    <div>
    {% if category.image %}
		<div class="image"><a href="{{ category.href }}"><img src="{{ category.image }}" alt="{{ category.name }}" /></a></div>
    {% endif %}
    <a href="{{ category.href }}">{{ category.name }}</a>
  </div>
  {% endfor %}
</div>
</div>