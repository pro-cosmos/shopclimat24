<div id="slideshow{{ module }}" class="owl-carousel slideshow" style="opacity: 1;">
  {% for banner in banners %}
  <div class="item">
    {% if banner.link %}
    <a href="{{ banner.link }}"><img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" /></a>
    {% else %}
    <img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" />
    {% endif %}
  </div>
  {% endfor %}
</div>
<script><!--
$('#slideshow{{ module }}').owlCarousel({
	items: 6,
	autoPlay: 10000,
	singleItem: true,
	navigation: true,
	navigationText: ['<i class="fa fa-chevron-left fa-5x"></i>','<i class="fa fa-chevron-right fa-5x"></i>'],
	pagination: true
});
setTimeout(function () {
	$('.title_banner').addClass('show').addClass('animated').addClass('bounceInLeft');
}, 2500);
--></script>