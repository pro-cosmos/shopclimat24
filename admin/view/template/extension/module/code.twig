{{ header }}{{ column_left }}
 <div id="content">
   <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
	    <button type="submit" form="form" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title_title }}</h1>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
	{% if success %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
	<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form">
		<label class="col-sm-2 control-label">{{ protection }}</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="module_gofilter_code_protection" value="{% if gofilter_code_protection %}{{ gofilter_code_protection }}{% endif %}" size="30" />
			<input type="hidden" value="1" name="module_gofilter_status">
		</div>
		<div class="col-sm-4"></div><div class="clearfix"></div>
		<div class="col-sm-2"></div>
		<div class="col-sm-10">
			<br /><br /><span style="font-size: 10px;">{{ help_cod_protection }}</span><br /><br />
			<span style="font-weight: normal;">{{ help_protection }}</span>
		</div>
		<div class="col-sm-2"></div><div class="col-sm-10"><br /><span style="font-size: 10px;">* {{ text_help }}</span></div>
	</form>
  </div>
</div>
{{ footer }}